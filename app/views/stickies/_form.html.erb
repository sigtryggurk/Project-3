<%= form_for(@sticky , remote: true) do |f| %>
  <% if @sticky.errors.any?%>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @sticky.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.text_area :text %>
  </p>

  <p class="button"><%= f.submit %></p>
<% end %>
